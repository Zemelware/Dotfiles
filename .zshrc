# Set default editor
export EDITOR=vim

# Aliases

# ls variations
alias ls="ls -GF"
alias la="ls -AGF"
alias ll="ls -alhGF"

# Git
alias ga="git add"
alias gc="git commit"
alias gb="git branch"
alias gd="git diff"
alias gpull="git pull origin"
alias gpush="git push origin"

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
alias .....="cd ../../../.."

# Python
alias python="python3"
alias pip="pip3"
